// should throw exception because unknown CObj 'c'
// -- works as of 9/25/19
define test1() {
  b = bst();
  a = array();

  interpolate({
    a : { endPos : { x : 300, y : 400 }, endTime :  3  },
    b : { endPos : { x : 300, y : 400 }, endTime :  3  },
    c : { endPos : { x : 300, y : 400 }, endTime :  3  }
  });
}


// regular function (should work)
